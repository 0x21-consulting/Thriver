{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },

  "env": {
    "browser": true,
    "node": true,
    "mongo": true,
    "meteor": true
  },

  "extends": [
    "airbnb",
    "plugin:meteor/recommended"
  ],

  "globals": {
    "Thriver": true,
    "SimpleSchema": true,
    "Marked": true,
    "SHA256": true
  },

  "rules": {
    "no-underscore-dangle": 0,
    "new-cap": 0
  }
}
